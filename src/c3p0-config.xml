		<property name="initialPoolSize">10</property>  
		<!--initialPoolSize：初始化时获取三个连接，取值应在minPoolSize与maxPoolSize之间。 --> 
        <property name="maxIdleTime">30</property>   <!-- 最大空闲时间 -->
        <property name="maxPoolSize">100</property>  
